#!/bin/bash
set -eou pipefail

export PATH="/usr/local/bin/:$PATH"
export PATH="$HOME/projects/afew/.direnv/python-3.8.5/bin/:$PATH"

# Afew move files before syncing
nice -n 20 afew -m -v

# Sync mail
nice -n 20 mbsync -a

# Not much indexing
nice -n 20 notmuch new

# Tag emails
nice -n 20 afew -n -t -v
